<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <com.whos.swiperefreshandload.view.SwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/viewPagerLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="210dip"
                    android:orientation="vertical">

                    <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="fill_parent"
                        android:layout_height="210dip"
                        android:background="@drawable/discovery_top" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:id="@+id/indicatorLayout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"></LinearLayout>
                    </RelativeLayout>
                </FrameLayout>

                <!-- 公司资质 年度报告  关于我们 -->

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/zizhiTextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_white_gray"
                        android:drawablePadding="12dip"
                        android:drawableTop="@drawable/discovery_img_10"
                        android:gravity="center"
                        android:paddingBottom="20dip"
                        android:paddingTop="20dip"
                        android:text="公司资质"
                        android:textColor="#666666"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="fill_parent"
                        android:background="@color/lightgray" />

                    <TextView
                        android:id="@+id/baogaoTextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_white_gray"
                        android:drawablePadding="12dip"
                        android:drawableTop="@drawable/discovery_img_12"
                        android:gravity="center"
                        android:paddingBottom="20dip"
                        android:paddingTop="20dip"
                        android:text="年度报告"
                        android:textColor="#666666"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="fill_parent"
                        android:background="@color/lightgray" />

                    <TextView
                        android:id="@+id/aboutTextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_white_gray"
                        android:drawablePadding="12dip"
                        android:drawableTop="@drawable/discovery_img_11"
                        android:gravity="center"
                        android:paddingBottom="20dip"
                        android:paddingTop="20dip"
                        android:text="关于我们"
                        android:textColor="#666666"
                        android:textSize="13sp" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/gray" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="15dip"
                    android:background="@color/gray" />

                <!-- 物业宝 -->
                <LinearLayout
                    android:id="@+id/propertyLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="15dip"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:paddingTop="15dip">

                    <com.gugu.activity.view.CustomNetworkImageView
                        android:id="@+id/propertyImageView"
                        android:layout_width="45dip"
                        android:layout_height="45dip"
                        android:background="@drawable/discovery_img_01"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="物业宝"
                            android:textColor="#666666"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/propertyRateTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:text="免物业费，送3%年化收益"
                            android:textColor="@color/orange"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/propertyNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未开启"
                        android:textColor="#999999"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:background="@drawable/bag_right_arrow" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/gray" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="15dip"
                    android:background="@color/gray" />

                <!-- 薪资宝 -->
                <LinearLayout
                    android:id="@+id/wageLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="15dip"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:paddingTop="15dip">

                    <com.gugu.activity.view.CustomNetworkImageView
                        android:id="@+id/wageImageView"
                        android:layout_width="45dip"
                        android:layout_height="45dip"
                        android:background="@drawable/discovery_img_02"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="薪资宝"
                            android:textColor="#666666"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/wageRateTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:text="工资尽享10%活期收益"
                            android:textColor="@color/orange"
                            android:textSize="12sp" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/wageNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未开启"
                        android:textColor="#999999"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:background="@drawable/bag_right_arrow" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/gray" />

                <LinearLayout
                    android:id="@+id/topMediaLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- 合作媒体  -->

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="15dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/home_media_1" />

                    <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
                        android:id="@+id/mediaViewPager"
                        android:layout_width="fill_parent"
                        android:layout_height="80dip" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottomMediaLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- 媒体报道  -->

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="15dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/home_media" />

                    <LinearLayout
                        android:id="@+id/mediaContentLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"></LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </com.whos.swiperefreshandload.view.SwipeRefreshLayout>

</LinearLayout>