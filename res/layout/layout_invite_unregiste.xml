<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_gray"
    android:orientation="horizontal"
    android:paddingBottom="10dip"
    android:paddingLeft="15dip"
    android:paddingRight="15dip"
    android:paddingTop="10dip">

    <!-- 头像 -->

    <LinearLayout
        android:id="@+id/headLayout"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_text_name"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/headTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="瑶"
            android:textColor="#aaaaaa"
            android:textSize="40sp" />
    </LinearLayout>

    <!-- 姓名  手机号   积分等内容 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dip"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 姓名 手机号 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周瑶"
                android:textColor="#666666"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/phoneNumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="13718805315"
                android:textColor="#999999"
                android:textSize="12sp"
                android:visibility="invisible" />
        </LinearLayout>

        <!-- TA成功注册，你将获利100积份 -->

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="TA成功注册，你将获利100积份"
            android:textColor="#999999"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- 积分  点击领取 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/registeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_button_selector"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:text="请TA注册"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>