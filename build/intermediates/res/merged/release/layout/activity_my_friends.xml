<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_2"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/topbarLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="#c70a0d"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back" />

        <TextView
            android:id="@+id/titleTextView"
            style="@style/white_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="债务好友" />

        <RadioGroup
            android:visibility="gone"
            android:id="@+id/tab_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/tab_friends"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tab_left_bg"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:paddingBottom="6dip"
                android:paddingTop="6dip"
                android:text="债务好友"
                android:textColor="@drawable/text_blue_white_selector"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/tab_investment"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tab_right_bg"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="6dip"
                android:paddingTop="6dip"
                android:text="鲁信网贷好友"
                android:textColor="@drawable/text_blue_white_selector"
                android:textSize="17sp" />
        </RadioGroup>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray_2"
        android:orientation="vertical" >

        <include
            android:id="@+id/emptyLayout"
            layout="@layout/layout_empty_view"
            android:visibility="gone" />

        <com.whos.swiperefreshandload.view.SwipeRefreshLayout
            android:id="@+id/swipe_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:cacheColorHint="@android:color/transparent"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:duplicateParentState="true"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false"
                android:overScrollMode="always"
                android:scrollbars="none"
                android:scrollingCache="false" />
        </com.whos.swiperefreshandload.view.SwipeRefreshLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/workspace/androidstudio/BagGugu4Android_LuXin/res/layout/activity_my_friends.xml -->